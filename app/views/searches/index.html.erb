<div class ="container">
  <div class ="row">
      <% if @range =="User"%>
        <h2>Users serch for "<%= @serch %>"</h2>
        <table class='table'>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
              <td><%= user.name %></td>
              <td><%= user.followings.count %>フォロー</td>
              <td><%= user.followers.count %>フォロワー</td>
              <td>
                <% if user != current_user %>
                  <% if user.is_followed_by?(current_user) %>
                    <%= link_to user_relationships_path(user.id), method: :delete do %>
                      <button class ="btn btn-danger">フォロー解除</button>
                    <% end %>
                  <% else %>
                    <%= link_to user_relationships_path(user.id), method: :post do %>
                      <button class ="btn btn-primary">フォロー</button>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <h2>Books serch for "<%= @serch %>"</h2>
        <table class='table'>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to(book.user) do %>
                  <%= image_tag book.user.get_profile_image, size:'50x50' %>
                <% end %>
              </td>
              <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
              <td><%= book.body %></td>
              <td>コメント数: <%= book.book_comment.count %></td>
              <td><%= render "favorites/btn", book: book %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
  </div>
</div>